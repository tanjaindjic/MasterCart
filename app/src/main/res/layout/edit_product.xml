<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        //BACK TOOLBAR NA VRHU
        <android.support.v7.widget.Toolbar
            android:id="@+id/back_toolbar"
            android:gravity="top"
            app:contentInsetStartWithNavigation="0dp"
            app:title="Edit Product"
            app:titleMarginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >

        </android.support.v7.widget.Toolbar>

        <EditText
            android:id="@+id/editEditTextNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/editEditTextPriceProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/editEditTextDescriptionProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/editEditTextQuantityProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/editEditTextSizeProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Size"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/editEditTextDiscountProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <Spinner
            android:id="@+id/editSpinnerCategoryProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <ImageView
            android:id="@+id/imageEditViewProduct"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_dummy"/>

        <Button
            android:id="@+id/btnEditPictureProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose"/>

        <android.support.v7.widget.FitWindowsLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/editProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="SAVE"/>

        </android.support.v7.widget.FitWindowsLinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>